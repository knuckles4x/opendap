    <!-- ************************************************************ -->
    <!-- * OPERATIONS METADATA                                      * -->
    <!-- ************************************************************ -->
    <ows:OperationsMetadata>
        <ows:Operation name="GetCapabilities">
            <ows:DCP>
                <ows:HTTP>
                    <ows:Get xlink:href="http://your.domain.name:8080/opendap/WCS?"/>
                    <ows:Post xlink:href="http://your.domain.name:8080/opendap/WCS/post">
                        <ows:Constraint name="PostEncoding">
                            <ows:AllowedValues>
                                <ows:Value>XML</ows:Value>
                            </ows:AllowedValues>
                        </ows:Constraint>
                    </ows:Post>
                    <ows:Post xlink:href="http://your.domain.name:8080/opendap/WCS/soap">
                        <ows:Constraint name="PostEncoding">
                            <ows:AllowedValues>
                                <ows:Value>SOAP</ows:Value>
                            </ows:AllowedValues>
                        </ows:Constraint>
                    </ows:Post>
                </ows:HTTP>
            </ows:DCP>
        </ows:Operation>
        <ows:Operation name="GetCoverage">
            <ows:DCP>
                <ows:HTTP>
                    <ows:Get xlink:href="http://your.domain.name:8080/opendap/WCS?"/>
                    <ows:Post xlink:href="http://your.domain.name:8080/opendap/WCS/post">
                        <ows:Constraint name="PostEncoding">
                            <ows:AllowedValues>
                                <ows:Value>XML</ows:Value>
                            </ows:AllowedValues>
                        </ows:Constraint>
                    </ows:Post>
                    <ows:Post xlink:href="http://your.domain.name:8080/opendap/WCS/soap">
                        <ows:Constraint name="PostEncoding">
                            <ows:AllowedValues>
                                <ows:Value>SOAP</ows:Value>
                            </ows:AllowedValues>
                        </ows:Constraint>
                    </ows:Post>
                </ows:HTTP>
            </ows:DCP>
            <ows:Parameter name="Format">
                <ows:AllowedValues>
                    <ows:Value>application/x-netcdf-cf1.0</ows:Value>
                </ows:AllowedValues>
            </ows:Parameter>
        </ows:Operation>
        <ows:Operation name="DescribeCoverage">
            <ows:DCP>
                <ows:HTTP>
                    <ows:Get xlink:href="http://your.domain.name:8080/opendap/WCS?"/>
                    <ows:Post xlink:href="http://your.domain.name:8080/opendap/WCS/post">
                        <ows:Constraint name="PostEncoding">
                            <ows:AllowedValues>
                                <ows:Value>XML</ows:Value>
                            </ows:AllowedValues>
                        </ows:Constraint>
                    </ows:Post>
                    <ows:Post xlink:href="http://your.domain.name:8080/opendap/WCS/soap">
                        <ows:Constraint name="PostEncoding">
                            <ows:AllowedValues>
                                <ows:Value>SOAP</ows:Value>
                            </ows:AllowedValues>
                        </ows:Constraint>
                    </ows:Post>
                </ows:HTTP>
            </ows:DCP>
            <ows:Parameter name="Format">
                <ows:AllowedValues>
                    <ows:Value>text/xml</ows:Value>
                </ows:AllowedValues>
            </ows:Parameter>
        </ows:Operation>
    </ows:OperationsMetadata>
    <!-- ************************************************************ -->
    <!-- * SERVICE METADATA SECTION                                 * -->
    <!-- ************************************************************ -->
    <ServiceMetadata>
        <formatSupported>application/x-netcdf-cf1.0</formatSupported>
        <formatSupported>application/octet-stream</formatSupported>
    </ServiceMetadata>
